{
  "manifest_version": 3,
  "name": "Yandex Music Playlist Exporter",
  "version": "1.1",
  "description": "Export Yandex Music playlists to text files.",
  "default_locale": "en",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://music.yandex.ru/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.yandex.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}